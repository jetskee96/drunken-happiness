<h1>Listing poems</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Synopsis</th>
      <th>Genre</th>
      <th>Theme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poems.each do |poem| %>
      <tr>
        <td><%= poem.name %></td>
        <td><%= poem.synopsis %></td>
        <td><%= poem.genre %></td>
        <td><%= poem.theme %></td>
        <td><%= link_to 'Show', poem %></td>
        <td><%= link_to 'Edit', edit_poem_path(poem) %></td>
        <td><%= link_to 'Destroy', poem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poem', new_poem_path %>
